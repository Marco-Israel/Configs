'----- PART: BASE objects ---------------------------------------------------'/
!$encoderDecoder="encoderDecoder"


 folder $mi_ooc_BASE {


     'link to base template
     $encoderDecoder .up.|> $aB : > <<Implements>>


     class $encoderDecoder $layout_encoderDecoderBase{
        + dataSource*   :       uint8_pt*   {ctor,get}
        + dataSourceLength  :   uint8_t     {ctor,get}
        + dataDestination*  :   uint8_pt*   {ctor,get}
        + dataDestinationSize :     uint8_t     {ctor,get}
        ----
        + _encode(base__st*)    :   uint8_t {abstract}
        + _decode(base__st*)    :   uint8_t {abstract}
        + _setDataSoure(base__st*, dataSource__pt*, dataSourceLength) {abstract}
        + _setDataDestination(base__st*, dataDestination__pt*, \
dataDestinationSize) {abstract}
