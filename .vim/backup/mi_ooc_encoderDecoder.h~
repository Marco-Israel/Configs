/**
 * This private attributes (object variables and other data members)
 */
typedef struct encoderDecoder__thisAttributePrivate__S
    encoderDecoder__thisAttributePrivate__st;





/**
 * This public attributes (object variables and other data members)
 */
typedef struct encoderDecoder__thisAttributePublic__S
    encoderDecoder__thisAttributePublic__st;





/**
 * This virtual operations (virtual or abstract methods / functions)
 */
typedef struct encoderDecoder__thisVirtualOperation__S
    encoderDecoder__thisVirtualOperation__st;





/**
 * The object itself
 */
typedef struct encoderDecoder__this__S
    encoderDecoder__this__st;





/**
 * The constructor parameter list:  Variables parsed to the constructor
 * of 'this' object as function parameters.
 */
typedef struct encoderDecoder__ctorParamList__S
    encoderDecoder__ctorParamList__st;





/**
 * The virtual Function Table (vFTable)
 */
typedef struct encoderDecoder__vFTable__S
    encoderDecoder__vFTable__st;





/**
 * Parameter list to be parsed to the error and exception handling function
 * This can also be used as and error object to collect error or exception
 * information,
 */
typedef struct encoderDecoder__errorHandlerParamList__S
    encoderDecoder__errorHandlerParamList__st;



