/* ----- PART: NORMAL object functions (methods) -----------------------------*/



/**
 * @brief Returns the number of this object which was assigend after new().
 * @Param ps__this Pointer to object
 *
 * @Returns Returns the number of this object which was assigend after new().
 */
STATIC INLINE uint8_t encoderDecoder__get_objectNr(
        encoderDecoder__this__st *const ps__this
        )
{

    return ps__this->attributePrivate__S.objectNr;

}



/* -------- END PART: Normal object functions (methods) ----------------------*/





/* ----- PART: SET and GET (setter and getter) functions ---------------------*/


    /*BEGIN********************BEGIN********************BEGIN*/

STATIC INLINE void encoderDecoder__set_dataSource(
        encoderDecoder__this__st *const ps__this,
        uint8_t * pa__dataSource,
        uint8_t length_dataSource
        )
{

    if(NULLp != ps__this)
    {
        ps__this->attributePublic__S.pa__dataSource = pa__dataSource;
        ps__this->attributePublic__S.length_dataSource = length_dataSource;
    }

}





STATIC INLINE void encoderDecoder__set_dataDestination(
        encoderDecoder__this__st *const ps__this,
        uint8_t * paD__dataDestination,
        uint8_t size_dataDestination
        )
{

    if(NULLp != ps__this)
    {
        ps__this->attributePublic__S.paD__dataDestination= paD__dataDestination;
        ps__this->attributePublic__S.size_dataDestination= size_dataDestination;
    }

}





STATIC INLINE uint8_t * encoderDecoder__getPt_dataDestination(
        encoderDecoder__this__st *const ps__this
    )
{

    return ps__this->attributePublic__S.paD__dataDestination;

}





STATIC INLINE uint8_t  encoderDecoder__get_sourceLength(
        encoderDecoder__this__st *const ps__this
    )
{

    return ps__this->attributePublic__S.length_dataSource;

}






STATIC INLINE uint8_t  encoderDecoder__get_dataDestinationSize(
        encoderDecoder__this__st *const ps__this
    )
{

    return ps__this->attributePublic__S.size_dataDestination;

}





    /*END***********************END***********************END*/

    /*END***********************END***********************END*/


/* -------- PART: SET and GET (setter and getter) functions ------------------*/





/* ----- PART: VIRTUAL object functions (methods) ----------------------------*/


/**
 * Direct call to virtual the base errorHandler.
 * @param ps__this This base object itself.
 * @param ps__paramList List of function parameters.
 */
STATIC INLINE void encoderDecoder__erroHandler(
        encoderDecoder__this__st *const ps__this,
        encoderDecoder__errorHandlerParamList__st *const ps__paramList
        )
{


    ps__this->ps__virtualOperation->pf__errorHandler(ps__this, ps__paramList);



}




    /*BEGIN********************BEGIN********************BEGIN*/


STATIC INLINE uint8_t encoderDecoder__encode(
        encoderDecoder__this__st *const  ps__this
        )
{

    return ps__this->ps__virtualOperation->pf__encoder(ps__this);

}



STATIC INLINE uint8_t encoderDecoder__decode(
        encoderDecoder__this__st *const ps__this
        )
{

    return ps__this->ps__virtualOperation->pf__decoder(ps__this);

}

