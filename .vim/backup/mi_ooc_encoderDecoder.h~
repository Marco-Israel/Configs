 /**
 * Pointer to the constructor function.
 * @param ps__this This base object itself.
 * @param ps__paramList List of function parameters.
 */
typedef void (encoderDecoder__ctor__ft)(
        encoderDecoder__this__st *const ps__this,
        encoderDecoder__ctorParamList__st *const  ps__paramList
        );





/**
 * Pointer to the destructor function
 * @param ps__this This base object itself
 */
typedef void (encoderDecoder__dtor__ft)(
        encoderDecoder__this__st *const ps__this
        );





/**
 * Pointer to the destructor function
 * @param ps__this This base object itself
 * @param ps__paramList List of function parameters.
 */
typedef void (encoderDecoder__error__ft)(
        encoderDecoder__this__st *const ps__this,
        encoderDecoder__errorHandlerParamList__st *const ps__paramList
        );





    /*BEGIN********************BEGIN********************BEGIN*/

typedef uint8_t (encoderDecoder__encoder__ft)(
        encoderDecoder__this__st *const ps__this
        );


typedef uint8_t (encoderDecoder__decoder__ft)(
        encoderDecoder__this__st *const ps__this
        );
    /*END***********************END***********************END*/



/* -------- END PART: VIRTUAL functions (methods) ----------------------------*/





/*******************************************************************************
 **     Type UNION definition
 ******************************************************************************/




