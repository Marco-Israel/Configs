'folder Lmos52042 {
'
' Lmos52042 -up-|> SSP : > << Inherrits >>
' Lmos52042 ..|> Lmos52042_WRAPPER : > << Includes >>
' Lmos52042 .up.|> $aS : > << Implements >>
'
'
' 'class Lmos52042_WRAPPER <<(W,#d70087) HW Wrapper>> {
' Lmos52042_WRAPPER -up- command_E   :> <<Holds>
' class Lmos52042_WRAPPER <<(W,#d70087) HW Wrapper>> {
'    <b>TODO:</b>
'    o Define Registers
'    o Define Commands to send
'    o Define Values to set in Registers and send via Commands
' }
'
'
'
' Lmos52042 -up-* "1" menchesterEncoder : > << needs >>
'class menchesterEncoder $hw {
'    ----
'    <b> Nedds some manchester encoder in hw like:  </b>
'        o   IO + Timer + Interruts
'        o   HW Manchester encoding unit (e.g. PSI5 Unit in Aurix Tricore TC27x)
'
'}
'
'
' class Lmos52042 $sensS {
'     ----
