#include <Assert.h> //MITODO deleate if no printf is used
#include <Ifx_Assert.h>
#include "adc_conversion_types.h"

/**
 *  Converts the given raw value from adc with specified settings to a real value.
 *  @param rawValue	The raw Adc Value to be converted
 *  @param config Conversion settings
 *
 *  @returns  Conversion result
 */
float32 adc_conversion_convert_raw(uint32_t rawValue,const adc_conversion_config const *config)
{
	float32 value;

	value = ((float32)config->gain * (float32)rawValue + (float32)config->offset);


	IFX_ASSERT(IFX_CFG_ASSERT_VERBOSE_LEVEL_DEFAULT,((value < config->min) || (value > config->max)));


	return value;
}
